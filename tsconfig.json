{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "noEmit": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "rootDirs": [
      "node_modules",
      "src"
    ],
    "paths": {
      "~/*" : ["./src/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
